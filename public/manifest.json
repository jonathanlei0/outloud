{
  "manifest_version": 3,
  "name": "OutLoud",
  "version": "1.0.0",
  "description": "Read selected text aloud using text-to-speech",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.cartesia.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OutLoud - Read text aloud"
  },
  "icons": {
    "16": "icons/16.svg",
    "32": "icons/32.svg",
    "48": "icons/48.svg",
    "128": "icons/128.svg"
  }
} 